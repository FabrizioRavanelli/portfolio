---
import AnimatedContent from '../../components/AnimatedContent.astro';
import Layout from '../../layouts/Layout.astro';
// import { t } from "i18next";

import {getLangFromUrl, useTranslations} from '../../i18n/ui';
import { getStaticPaths } from '../../i18n/ui';

export { getStaticPaths };

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("projects.title")} lang={lang}>
	<AnimatedContent>
		<main class="container mx-auto px-4 py-8">
			<h1 class="text-4xl font-bold mb-6 text-primary">{t("projects.title")}</h1>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="bg-secondary bg-opacity-10 p-6 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4 text-primary">{t("projects.project1.title")}</h2>
					<p class="mb-4">{t("projects.project1.description")}</p>
					<a href="#" class="text-accent hover:underline underline-offset-8">{t("projects.viewProject")}</a>
				</div>
				<div class="bg-secondary bg-opacity-10 p-6 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4 text-primary">{t("projects.project2.title")}</h2>
					<p class="mb-4">{t("projects.project2.description")}</p>
					<a href="#" class="text-accent hover:underline underline-offset-8">{t("projects.viewProject")}</a>
				</div>
				<div class="bg-secondary bg-opacity-10 p-6 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4 text-primary">{t("projects.project3.title")}</h2>
					<p class="mb-4">{t("projects.project3.description")}</p>
					<a href="#" class="text-accent hover:underline underline-offset-8">{t("projects.viewProject")}</a>
				</div>
			</div>
		</main>
	</AnimatedContent>
</Layout>