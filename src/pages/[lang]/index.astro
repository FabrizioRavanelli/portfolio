---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Services from '../../components/Services.astro';
import Skills from '../../components/Skills.astro';
import InternationalExperience from '../../components/InternationalExperience.astro';
import WhyWorkWithMe from '../../components/WhyWorkWithMe.astro';
import CallToAction from '../../components/CallToAction.astro';
// import { t } from "i18next";
import AnimatedContent from '../../components/AnimatedContent.astro';
import {getLangFromUrl, useTranslations} from '../../i18n/ui';
import { getStaticPaths } from '../../i18n/ui';

export { getStaticPaths };

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("home.title")} lang={lang}>
  <AnimatedContent>
    <Hero lang={lang} />
    <Services lang={lang} />
    <Skills lang={lang} />
    <InternationalExperience lang={lang} />
    <WhyWorkWithMe lang={lang} />
    <CallToAction lang={lang} />
  </AnimatedContent>
</Layout>