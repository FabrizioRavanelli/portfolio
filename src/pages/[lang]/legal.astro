---
import Layout from '../../layouts/Layout.astro';
import {getStaticPaths, getLangFromUrl, useTranslations} from '../../i18n/ui';

export { getStaticPaths };

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("legal.title")} lang={lang}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6 text-primary">{t("legal.title")}</h1>
    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">{t('legal.companyInfo.title')}</h2>
      <p>{t('legal.companyInfo.content')}</p>
    </section>
    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">{t('legal.disclaimer.title')}</h2>
      <p>{t('legal.disclaimer.content')}</p>
    </section>
    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">{t('legal.privacyPolicy.title')}</h2>
      <p>{t('legal.privacyPolicy.content')}</p>
    </section>
    <section>
      <h2 class="text-2xl font-semibold mb-4">{t('legal.copyright.title')}</h2>
      <p>{t('legal.copyright.content')}</p>
    </section>
  </main>
</Layout>