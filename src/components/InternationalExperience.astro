---
// import { t } from "i18next";
import {getLangFromUrl, ui, useTranslations} from '../i18n/ui';

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;

const t = useTranslations(lang);
---

<section class="py-8 sm:py-12 md:py-16 bg-gradient-to-r from-primary to-accent text-background">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-6">{t("home.internationalExperience.title")}</h2>
    <p class="text-lg sm:text-xl mb-6 sm:mb-8 max-w-2xl mx-auto">{t("home.internationalExperience.description")}</p>
    <div class="flex flex-col sm:flex-row justify-center items-center sm:items-start space-y-6 sm:space-y-0 sm:space-x-4 md:space-x-8">
      <div class="flex flex-col items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
        </svg>
        <span class="font-semibold text-sm sm:text-base">{t("home.internationalExperience.spain")}</span>
      </div>
      <div class="flex flex-col items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
        </svg>
        <span class="font-semibold text-sm sm:text-base">{t("home.internationalExperience.germany")}</span>
      </div>
      <div class="flex flex-col items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 sm:h-12 sm:w-12 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
        </svg>
        <span class="font-semibold text-sm sm:text-base">{t("home.internationalExperience.france")}</span>
      </div>
    </div>
  </div>
</section>