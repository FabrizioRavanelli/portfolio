---
import { t } from "i18next";

const reasons = [
  { icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", title: "home.whyWorkWithMe.reason1", description: "home.whyWorkWithMe.description1" },
  { icon: "M13 10V3L4 14h7v7l9-11h-7z", title: "home.whyWorkWithMe.reason2", description: "home.whyWorkWithMe.description2" },
  { icon: "M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z", title: "home.whyWorkWithMe.reason3", description: "home.whyWorkWithMe.description3" },
];
---

<section class="py-16 bg-secondary bg-opacity-10">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center text-primary">{t("home.whyWorkWithMe.title")}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {reasons.map((reason) => (
        <div class="flex flex-col items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-accent mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={reason.icon} />
          </svg>
          <h3 class="text-xl font-semibold mb-2">{t(reason.title)}</h3>
          <p>{t(reason.description)}</p>
        </div>
      ))}
    </div>
  </div>
</section>