---
import ImageItem from './ImageItem.astro';

export interface Props {
  logo: ImageMetadata;
  title: string;
  company: string;
  location: string;
  period: string;
  responsibilities: string[];
}

const { logo, title, company, location, period, responsibilities } = Astro.props;
---

<div class="mb-8 bg-secondary bg-opacity-10 p-6 rounded-lg">
  <div class="flex items-start">
    <ImageItem src={logo} alt={company} width={48} height={48} class="mr-4" />
    <div>
      <h3 class="text-2xl font-semibold text-primary">{title}</h3>
      <p class="text-lg text-secondary">{company}</p>
      <p class="text-sm text-gray-500 mb-2">
        <span class="mr-2">{location}</span> | <span class="ml-2">{period}</span>
      </p>
      <ul class="list-disc list-inside">
        {responsibilities.map((item) => (
          <li class="text-text">{item}</li>
        ))}
      </ul>
    </div>
  </div>
</div>